 #include<stdio.h>
 #include<unistd.h>
 #include<sys/types.h>
 #include<stdlib.h>                                   
 int main(void){
 int n;

 printf("enter the no. of elements\n");
 scanf("%d",&n);
 int arr[n];
 printf("enter the elements");
 for(int i=0;i<n;i++){
 scanf("%d",&arr[i]);
 }
 for(int i=0;i<n;i++){
 if(arr[i]%2==0){
 sleep(5);
 printf("child is created%d\n",arr[i]);
}
 
 else{
 sleep(30);
 printf("parent is created%d\n",arr[i]);
 
 }
 }
 }
